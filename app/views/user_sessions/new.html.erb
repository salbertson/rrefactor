<% title "Login" %>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </fieldset>
  <fieldset>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </fieldset>
  <%= f.submit "Log in", :class => "button" %>
<% end %>


