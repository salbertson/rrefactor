<% title "Recent Refactorings", false %>

<%= render :partial => "shared/title_and_button" %>

<% for refactoring in @refactorings %>
  <div class="code-preview">
    <div class="group">
      <h3>by <%= refactoring.user.username %></h3>
      <span>
        <% if current_user == refactoring.user %>
          <%= link_to "Edit", edit_refactoring_path(refactoring) %> |
          <%= link_to "Delete", refactoring, :confirm => 'Are you sure?', :method => :delete %> |
        <% end %>
        <%= link_to "View", post_path(refactoring.post) %>
      </span>
    </div>
    <div class="code">
      <%= simple_format(refactoring.code) %>
    </div>
  </div>
<% end %>
